---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Explora diseños gráficos innovadores y creativos. Servicios de diseño personalizado para marcas que buscan destacar." />
		<meta name="keywords" content="diseño gráfico, branding, diseño web, ilustración, logotipos" />
		<meta name="author" content="Jupiter Design" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
