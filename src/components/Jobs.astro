---
import CardProfile from "./CardProfile.astro";

const cards = [
    {
        image :"/marianela-profile.png",
        title:"Mar",
        subTitle:"Diseñadora",
        body:""
    }, 
    {
        image :"/julian-profile.png",
        title:"Julián",
        subTitle:"Programador",
        body:""
    }
]
---

<div class="w-[980px] flex flex-col items-center gap-8 mb-40">
    <div class="flex flex-col gap-3 items-center">
    <h2 class="text-5xl font-semibold text-white ">Proyectos</h2>
    <h3 class="text-2xl text-white font-light">Descubre algunos de nuestros proyectos recientes.</h3>
</div>
    <div class="grid grid-cols-2 gap-4">
    {cards.map ((card) => <CardProfile image={card.image} title={card.title} subTitle={card.subTitle} body={card.body}/>)}
    </div>

</div>