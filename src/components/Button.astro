---
interface Props {
	title: string;
    paddingX?: string;
    type: "primary" | "secondary" | "navLink" ;
	icon?: string
}

const { title, type, paddingX, icon } = Astro.props;
---


	<button class=`text-white py-3 text-xl rounded-xl gap-2 flex items-center w-min font-normal ${paddingX ? paddingX : "px-5"} ${type === "primary" ? "bg-primary border border-primary" : type === "secondary" ? "hover:text-primary border border-white hover:border-primary" : type === "navLink" ? "hover:text-primary" : "hidden"} interactive-button `>
			{icon && <img src={icon} alt={title}>}{title}
	</button>
